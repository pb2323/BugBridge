# BugBridge Platform - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# Canny.io Configuration
# ============================================
CANNY_API_KEY=your_canny_api_key_here
CANNY_SUBDOMAIN=bugbridge.canny.io
CANNY_BOARD_ID=your_board_id_here
CANNY_SYNC_INTERVAL=3600  # seconds (1 hour default)

# ============================================
# Jira MCP Configuration
# ============================================
JIRA_MCP_SERVER_URL=http://localhost:8000
JIRA_PROJECT_KEY=PROJ
JIRA_RESOLUTION_STATUSES=Done,Resolved,Fixed
JIRA_DEFAULT_ASSIGNEE=  # Optional: Default assignee for tickets

# ============================================
# XAI (xAI) Configuration
# ============================================
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-beta  # or grok-2
XAI_TEMPERATURE=0.0  # for determinism (0.0 = deterministic)

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/bugbridge
# Alternative format:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/bugbridge

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# ============================================
# Reporting Configuration
# ============================================
REPORT_SCHEDULE=0 9 * * *  # Daily at 9 AM (cron format)
REPORT_RECIPIENTS=team@company.com,manager@company.com
REPORT_TIMEZONE=UTC  # or your timezone (e.g., America/New_York)

# ============================================
# Agent Configuration
# ============================================
AGENT_RETRY_MAX_ATTEMPTS=3
AGENT_RETRY_BACKOFF=2.0  # exponential backoff multiplier
AGENT_TIMEOUT=300  # seconds (5 minutes)
AGENT_ENABLE_CACHING=false  # Set to true to cache LLM responses (may affect determinism)

# ============================================
# Priority Scoring Weights (0.0 to 1.0)
# ============================================
PRIORITY_WEIGHT_ENGAGEMENT=0.3  # User engagement (votes, comments)
PRIORITY_WEIGHT_SENTIMENT=0.3   # Sentiment severity
PRIORITY_WEIGHT_BUG_SEVERITY=0.3  # Bug severity (if bug)
PRIORITY_WEIGHT_BUSINESS_IMPACT=0.1  # Business impact keywords

# ============================================
# Dashboard API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Set to false in production

# Dashboard Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration (for dashboard)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Monitoring & Observability
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_METRICS=true
METRICS_PORT=9090  # Optional: Prometheus metrics port

# ============================================
# Email Configuration (for report delivery)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true
EMAIL_FROM=bugbridge@company.com
EMAIL_FROM_NAME=BugBridge Platform

# ============================================
# Slack Configuration (optional, for future)
# ============================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#bugbridge-alerts

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true  # Set to false in production
APP_NAME=BugBridge
APP_VERSION=1.0.0
