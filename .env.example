# BugBridge Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=local
DEBUG=false
LOG_LEVEL=INFO

# Canny.io Configuration
CANNY__API_KEY=your_canny_api_key_here
CANNY__SUBDOMAIN=your-subdomain
CANNY__BOARD_ID=your_board_id
CANNY__SYNC_INTERVAL_MINUTES=5

# Jira MCP Configuration
JIRA__SERVER_URL=http://localhost:8000
JIRA__PROJECT_KEY=PROJ
JIRA__RESOLUTION_DONE_STATUSES=Done,Resolved,Closed

# XAI (Grok) Configuration
XAI__API_KEY=your_xai_api_key_here
XAI__MODEL=grok-4-fast-reasoning
XAI__TEMPERATURE=0.0
XAI__MAX_OUTPUT_TOKENS=2048

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/bugbridge
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10
DATABASE__POOL_TIMEOUT=30

# Reporting Configuration (Optional)
REPORTING__ENABLED=true
REPORTING__SCHEDULE_CRON=0 9 * * *
REPORTING__RECIPIENTS=team@example.com

# Agent Configuration (Optional)
AGENTS__MAX_RETRIES=3
AGENTS__RETRY_BACKOFF_SECONDS=2.0
AGENTS__TIMEOUT_SECONDS=60
AGENTS__DETERMINISTIC=true
